generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @unique @default(uuid()) @db.Uuid
  name      String
  email     String    @unique
  roles     String[]
  password  String
  createdAt DateTime
  updatedAt DateTime
  notifications Notification[] @relation("NotifsByUser")
}

model Comment {
  id            String    @id @unique @default(uuid()) @db.Uuid
  comment       String
  createdAt     DateTime
  updatedAt     DateTime
}

model Document {
  id            String    @id @unique @default(uuid()) @db.Uuid
  name          String
  size          Int
  createdAt     DateTime
}

model Notification {
  id            String    @id @unique @default(uuid()) @db.Uuid
  description   String
  isRead        Boolean
  createdAt     DateTime
  user          User @relation("NotifsByUser", fields: [userID], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userID        String @db.Uuid
}

// author   User @relation(fields: [authorId], references: [id])
// authorId Int

model Project {
  id            String    @id @unique @default(uuid()) @db.Uuid
  name          String
  createdAt     DateTime
  updatedAt     DateTime
}

model Task {
  id                    String    @id @unique @default(uuid()) @db.Uuid
  subject               String
  status                String
  dueDate               String
  initialSpentTime      Int
  additionalSpentTime   Int[]
  advancement           Int
  createdAt             DateTime
  updatedAt             DateTime
}
